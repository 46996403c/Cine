<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oscarxiii.cine" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Cine"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".Cine" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oscarxiii.cine.Cine" />
        </activity>
        <activity
            android:name=".Detalles"
            android:label="@string/title_activity_detalles"
            android:parentActivityName=".Cine"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.oscarxiii.cine.Cine" />
        </activity>
        <provider
            android:name="com.example.oscarxiii.cine.provider.PelisProvider"
            android:authorities="com.example.oscarxiii.cine.provider"
            android:exported="false" />
        <service
            android:name="com.example.oscarxiii.cine.ServicioActualizadorPelis"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>
    </application>
</manifest>
